<resources>
    <!-- Base application theme. -->
    <style name="Theme.MakerList" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Theme.MakerList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MakerList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.MakerList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>